{
  "name": "live-simulation-config-explorer",
  "version": "0.1.0",
  "description": "A modern React-based configuration explorer for simulation systems",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env IS_ELECTRON=true vite",
    "build": "tsc && vite build",
    "build:dev": "tsc && cross-env NODE_ENV=development vite build",
    "build:prod": "tsc && cross-env NODE_ENV=production vite build",
    "build:analyze": "tsc && vite build --mode analyze",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "lint:electron": "eslint electron --ext js,ts",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "format:electron": "prettier --write electron",
    "preview": "vite preview",
    "preview:electron": "wait-on tcp:4173 && cross-env IS_ELECTRON=true electron electron/main.js",
    "electron": "wait-on tcp:3000 && cross-env IS_ELECTRON=true electron electron/main.js",
    "electron:dev": "concurrently \"npm run dev:electron\" \"npm run electron\"",
    "electron:pack": "npm run build:prod && electron-builder",
    "electron:pack:dev": "npm run build:dev && electron-builder",
    "electron:dist": "electron-builder --publish=never",
    "electron:dist:all": "electron-builder --publish=never --mac --win --linux",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:all": "npm run test:run && npm run test:jest",
    "test:coverage:all": "npm run test:coverage && npm run test:jest:coverage",
    "docs": "npm run build && npm run typecheck && npm run test:run",
    "docs:serve": "npm run docs && npx http-server dist -p 3000",
    "clean": "rm -rf dist dist-electron node_modules/.vite",
    "clean:all": "rm -rf dist dist-electron node_modules/.vite node_modules",
    "install:clean": "rm -rf node_modules package-lock.json && npm install",
    "prebuild": "npm run clean && npm run typecheck",
    "version": "npm run docs && git add .",
    "analyze": "npm run build:analyze && npx vite-bundle-analyzer dist/stats.html",
    "docker:build": "docker build -t live-simulation-config-explorer .",
    "docker:run": "docker run -p 3000:3000 live-simulation-config-explorer"
  },
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "electron-store": "^8.1.0",
    "leva": "^0.9.35",
    "polished": "^4.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^1.0.10",
    "react-router-dom": "^7.9.2",
    "styled-components": "^6.1.6",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.0.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.0.4",
    "wait-on": "^7.2.0"
  }
}
